<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
        <title>Sign-On</title>
    </head>
    <body class="container">
        <header>
            <%- include('./partials/header'); %>
        </header>
        <main>   
            <div class="container  mt-4">
                <div class="border col-xl-5 col-md-8">
                    <h3 class="px-5 mt-3">Create an account</h3>
                    <form action="/users/register" method="POST" class="bg-white rounded shadow-5-strong p-5">
                        <div class="form-outline mb-4">
                            <input class="form-control" id="username" type="text" name="username" placeholder="Username" required autofocus/>
                            <label class="visually-hidden" for="username">Username</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input class="form-control" id="firstname" type="text" name="firstname" placeholder="Firstname" required />
                            <label class="visually-hidden" for="firstname">Firstname</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input class="form-control" id="lastname" type="text" name="lastname" placeholder="Lastname" required />
                            <label class="visually-hidden" for="lastname">Lastname</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input class="form-control" id="email" type="email" name="email" placeholder="Email" required />
                            <label class="visually-hidden" for="email">Email</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input class="form-control" id="password" type="password" name="password" placeholder="Password" required />
                            <label class="visually-hidden" for="password">Password</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input class="form-control" id="password2" type="password" name="password2" placeholder="Confirm password"
                                required />
                            <label class="visually-hidden" for="password2">Confirm Password</label>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                        <div class="mt-3">
                            Already registered? <a href="/users/login">Login here</a>
                        </div>
                    </form>

                    <% if (typeof errors !='undefined' ) { %>
                        <div class="alert alert-danger" role="alert">
                            <ul class="list-group">
                                <% errors.forEach(error=> { %>
                                    <li class="list-group-item list-group-item-danger">
                                        <%= error.message %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                        <% } %>

                </div>
            </div>
        </main>
        <footer>
            <%- include('./partials/footer'); %>
        </footer>
    </body>
</html>